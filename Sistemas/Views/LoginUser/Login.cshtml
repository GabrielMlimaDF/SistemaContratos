@model Sistemas.Models.LoginViewModel
<link href="~/Content/style.css" rel="stylesheet" />

@if (TempData["msg"] != null)
{


    <div class="alert alert-danger mt-alerts">

        @TempData["msg"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="container1">
    <div class="content first-content">
        <div class="first-column">
            <h2 class="title title-primary">Seja Bem-vindo!</h2>
            <p class="description description-primary">Faça Login para acessar</p>

        </div>
        <div class="second-column">
            <h2 class="title title-second">Logar no sistema</h2>
            <p class="description description-second">Entre com os dados solicitados!</p>
           
            <section id="loginform">

                @using (Html.BeginForm("Login", "LoginUser", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                {

                    @Html.AntiForgeryToken()
                    <input type="email" class="form-control" name="EmailUsuario" required="" placeholder="Email">
                    <p></p>
                    <input type="password" name="SenhaUsuario" class="form-control" required="" placeholder="Senha" id="inputpassword">
                   

                    <!-- chebox -- mostrar senha-->

                    <div class="label-checkbox">
                        <input id="check2" name="LembrarMe" type="checkbox">
                        <label for="check2">Lembrar-ME</label>
                    </div>
                    <!-- chebox -- mostrar senha fim-->

                    <button id="cad_usuario" type="submit" class="btn1 btn-second ">
                        Logar
                    </button>


                    <p>@ViewBag.status</p>
                    <!-- script mostrar password -->
                    <!-- //end script -->
                }
            </section>


        </div>
    </div>
</div>
@section Scripts{

    <script src="~/Scripts/functionperson.js"></script>

}






